<h1>Viewing Party</h1>
<br>
<h2>Movie Details Page</h2>
<br>
<% if user_logged_in? %>
  <div id='create-party'>
    <%= link_to 'Create Viewing Party', new_movie_viewing_party_path(@movie) %>
  </div>
<% end %>
<br>
<div id='discover'>
  <%= button_to 'Back to Discover', discover_index_path, method: :get %>
</div>
<br>
<div id='movie-details'>
  <h3><%= @movie.title %></h3>
  <p>Vote: <%= @movie.vote_average %></p>
  <p>Runtime: <%= @movie.runtime %></p>
  <p>Genres: </p>
  <% @movie.genre.each do |g| %>
    <ul>
      <li><%= g[:name] %></li>
    </ul>
  <% end %>
  <p>Summary: <%= @movie.overview %></p>
  <p>Cast:</p>
  <% @cast.each do |c| %>
    <ul>
      <li><%= c %></li>
    </ul>
  <% end %>
</div>
<br>
<div id='movie-reviews'>
  <h4>Reviews</h4>
  <p><%= @reviews.count %> Reviews:</p>
  <% @reviews.each do |review| %>
    <p><%= review %></p>
    <br>
  <% end %>
</div>
