<h1>Viewing Party</h1>
<br>
<h2>Movies Results Page</h2>
<br>
  <div id="discover-button">
    <%= button_to 'Back to Discover', discover_index_path, method: :get %>
  </div>
  <br>

    <% @top_rated.each.with_index(1) do |movie, i| %>

  <div id="movie-<%= i %>">
    <p><%= link_to "#{movie.title}", movie_path(movie.id) %></p>
    <p><%= "#{movie.vote_average}" %></p>
  </div>
  <br>
  <% end %>
