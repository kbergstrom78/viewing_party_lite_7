<h1>Viewing Party</h1>
<br>
<h2>Create a Movie Party</h2>
<br>
<h3>Movie Title: <%= @movie.title %></h3>

<div id='party-details'>
  <%= form_with url: user_movie_viewing_parties_path(@user.id, @movie.id), method: :post, local: true do |form| %>
    <%= form.hidden_field :movie_id, value: @movie.id %>
    <%= form.hidden_field :host_id, value: @user.id %>
    <%= form.label :duration, 'Duration of Party:' %>
    <%= form.text_field :duration %>
    <br>
    <%= form.label :date, 'Date:' %>
    <%= form.text_field :party_date %>
    <br>
    <%= form.label :time, 'Start Time:' %>
    <%= form.text_field :party_time %>
    <br>

    <h3>Invite Friends to Party</h3>
    <% @users.each do |user| %>
      <div>
        <%= form.check_box :user_ids, { multiple: true }, user.id, nil %>
        <%= form.label :user_ids, user.email %>
      </div>
    <% end %>


   <%= form.submit 'Create Party' %>
  <% end %>
</div>
   



